<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="@dimen/button_radius" />
            <solid android:color="@android:color/white" />
            <stroke
                android:width="2dp"
                android:color="@android:color/secondary_text_dark" />
            <padding
                android:bottom="@dimen/button_padding"
                android:left="@dimen/button_padding"
                android:right="@dimen/button_padding"
                android:top="@dimen/button_padding" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="right"
            android:src="@drawable/ic_action_search" />
    </item>

    <item android:right="50dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <padding android:right="30dp" />
        </shape>
    </item>
</layer-list>